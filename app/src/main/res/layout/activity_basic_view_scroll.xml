<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_velocity_tracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VelocityTracker"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sjl.exercise.ui.view.scroll.SpeedView
        android:id="@+id/speed_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/tv_velocity_tracker" />

    <TextView
        android:id="@+id/tv_gesture_detector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GestureDetector"
        app:layout_constraintTop_toBottomOf="@+id/speed_view" />

    <com.sjl.exercise.ui.view.scroll.GestureView
        android:id="@+id/gesture_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/tv_gesture_detector" />
    <TextView
        android:id="@+id/tv_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroller"
        app:layout_constraintTop_toBottomOf="@+id/gesture_view" />

    <com.sjl.exercise.ui.view.scroll.ScrollerView
        android:id="@+id/scroller_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/tv_scroller" />
</android.support.constraint.ConstraintLayout>